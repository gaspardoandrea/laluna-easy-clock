<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/messages_header"
        app:isPreferenceVisible="false">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:key="reply"
            app:title="@string/reply_title"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:defaultValue="reply"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="minutes"
        app:title="@string/settingsMinutes">
        <SwitchPreferenceCompat
            app:key="showMinutes"
            app:title="@string/show"
            app:summaryOn="@string/minutesShowOn"
            app:summaryOff="@string/minutesShowOff"
            android:defaultValue="true"/>
        <SwitchPreferenceCompat
            app:key="showQuadrants"
            app:title="@string/showQuadrants"
            app:summaryOn="@string/quadrantsShowOn"
            app:summaryOff="@string/quadrantsShowOff"
            android:defaultValue="true"
            android:dependency="showMinutes"/>
        <SwitchPreferenceCompat
            app:key="showMinutesNumber"
            app:title="@string/showMinutesNumber"
            app:summaryOn="@string/showMinutesNumberOn"
            app:summaryOff="@string/showMinutesNumberOff"
            android:defaultValue="true"
            android:dependency="showMinutes"/>
    </PreferenceCategory>
</PreferenceScreen>